// MySQL 环境配置模板
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DifyApp {
  id String @id @default(cuid())

  // 应用基本信息
  name        String
  mode        String?
  description String?
  // JSON 字符串存储数组
  tags        String?

  // 应用状态：1-启用，2-禁用
  isEnabled Int? @default(1) @map("is_enabled")

  // 请求配置
  apiBase String @map("api_base")
  apiKey  String @map("api_key")

  // 回复表单配置
  enableAnswerForm       Boolean @default(false) @map("enable_answer_form")
  answerFormFeedbackText String? @map("answer_form_feedback_text")

  // 输入参数配置
  enableUpdateInputAfterStarts Boolean @default(false) @map("enable_update_input_after_starts")

  // 扩展配置
  openingStatementDisplayMode String? @map("opening_statement_display_mode") // 'default' | 'always'

  // 删除状态
  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("dify_apps")
}

// 角色表 - 用户角色
model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  // 角色字符串
  code      String   @unique
  // 手机号
  remark    String
  // 删除状态
  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([name, code, isDeleted])
  @@map("roles")
}

// 角色权限表
model RoleDifyApp {
  id        Int      @id @default(autoincrement())
  roleId    Int
  difyAppId String
  // 删除状态
  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([roleId, difyAppId, isDeleted])
  @@map("role_dify_apps")
}

// 用户表 - 后台管理员和普通用户账户
model User {
  id          Int      @id @default(autoincrement())
  name        String
  // 账号
  sn          String   @unique
  // 手机号
  phoneNumber String   @unique @map("phone_number")
  // 工作单位
  agency      String
  // 密码哈希
  password    String
  // 状态
  isEnabled   Boolean  @default(true) @map("is_enabled")
  // 删除状态
  isDeleted   Boolean  @default(false) @map("is_deleted")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([name, sn, phoneNumber, isEnabled, isDeleted])
  @@map("users")
}

model UserRole {
  id        Int      @id @default(autoincrement())
  userId    Int
  roleId    Int
  // 删除状态
  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId, roleId, isDeleted])
  @@map("user_roles")
}
